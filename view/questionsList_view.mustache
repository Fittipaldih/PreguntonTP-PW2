<main class="py-5">
    <div class="content container px-lg-5 p-4 bg-light rounded-3">
        <article class="mx-auto">
            <br>
            <div class="d-flex">
                <h3 class="col-11"> Total de preguntas creadas durante las fechas seleccionadas: {{totalQuestions}}</h3>
                <a href="/admin/totalQuestionsPdf" class="btn btn-primary col-1">
                    <i class="fa-solid fa-file-arrow-down"></i> PDF
                </a>
            </div>
            <br>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Pregunta</th>
                    <th>Opcion A</th>
                    <th>Opcion B</th>
                    <th>Opcion C</th>
                    <th>Opcion D</th>
                    <th>Correcta</th>
                    <th>Creacion</th>
                    <th>Mostrada</th>
                    <th>Acertada(cant)</th>
                    <th>Acertada(%)</th>
                </tr>
                </thead>
                <tbody>
                {{#allQuestions}}
                    <tr>
                        <td>{{descripcion}}</td>
                        <td>{{opcionA}}</td>
                        <td>{{opcionB}}</td>
                        <td>{{opcionC}}</td>
                        <td>{{opcionD}}</td>
                        <td>{{resp_correcta}}</td>
                        <td>{{fecha_creacion}}</td>
                        <td>{{veces_mostrada}} veces</td>
                        <td>{{veces_correcta}} veces</td>
                        <td>{{porc_correc}} %</td>
                    </tr>
                {{/allQuestions}}
            {{^allQuestions}}
                {{#questions}}
                    <p class="text-center fw-bold display-5"> No hay preguntas</p>
                {{/questions}}
            {{/allQuestions}}
                </tbody>
            </table>
        </article>
        <div class="pagination">
            {{#paginas}}
                <a href="?pagina={{numero}}" class="{{#esActual}}active{{/esActual}}">{{numero}}</a>
            {{/paginas}}
        </div>
        <div class="d-flex justify-content-center">
            <br>
            <a href="/lobby" class="btn btn-lg btn-primary m-3">Volver al lobby</a>
        </div>
    </div>
</main>