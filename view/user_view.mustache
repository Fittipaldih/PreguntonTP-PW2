<link rel="stylesheet" href="/public/css/home.css">
<main class="py-5">
    <div class="content container px-lg-5 p-4 bg-light rounded-3 ">
        <div class="row g-3">
            {{#user}}
                <h1 class="text-center display-3 fw-bold">{{Nombre_usuario}}</h1>
                <h2 class="text-center">Puntaje máximo: {{Puntaje_max}}</h2>
                <div class="col-md-6 d-flex justify-content-center">
                    <img src="/public/imagenes/perfil.jpg" width="200px" class="rounded d-block">
                    {{#canEdit}}
                        <button type="button" onclick="showFormPhoto();">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                            </svg>
                        </button>
                        <form id="edit-photo" style="display: none;" method="POST" action="User/edit">
                            <input type="hidden" name="edit" value="photo">
                            <input type="file" name="new">
                            <input type="submit" value="Guardar">
                        </form>
                        <script>
                            function showFormPhoto() {
                                var form = document.getElementById("edit-photo");
                                form.style.display = "block";
                            }
                        </script>
                    {{/canEdit}}
                </div>
                <div class="col-md-6 ">
                    <p>• Nombre completo: {{Nombre_completo}}
                        {{#canEdit}}
                            <button type="button" onclick="showFormName();">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                </svg>
                            </button>
                            <form id="edit-nameComplete" style="display: none;" method="POST" action="User/edit">
                                <input type="hidden" name="edit" value="nameComplete">
                                <input type="text" name="new" placeholder="Nombre completo">
                                <input type="submit" value="Guardar">
                            </form>
                            <script>
                                function showFormName() {
                                    var form = document.getElementById("edit-nameComplete");
                                    form.style.display = "block";
                                }
                            </script>
                        {{/canEdit}}
                    </p>
                    <p>• Género: {{Genero}}
                        {{#canEdit}}
                            <button type="button" onclick="showFormGenre();">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                </svg>
                            </button>
                            <form id="edit-genre" style="display: none;" method="POST" action="User/edit">
                                <input type="hidden" name="edit" value="genre">
                                <select name="new" class="form-select" required>
                                    <option value="">Seleccionar sexo</option>
                                    <option value="Masculino">Masculino</option>
                                    <option value="Femenino">Femenino</option>
                                    <option value="Prefiero no cargarlo">Prefiero no cargarlo</option>
                                </select>
                                <input type="submit" value="Guardar">
                            </form>
                            <script>
                                function showFormGenre() {
                                    var form = document.getElementById("edit-genre");
                                    form.style.display = "block";
                                }
                            </script>
                        {{/canEdit}}
                    </p>
                    <p>• Fecha de Nacimiento: {{Fecha_nacimiento}}
                            {{#canEdit}}
                                <button type="button" onclick="showFormBirth();">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                    </svg>
                                </button>
                                <form id="edit-birth" style="display: none;" method="POST" action="User/edit">
                                    <input type="hidden" name="edit" value="birthDate">
                                    <input type="date" name="new" class="form-control" required min="1900-01-01" max="2013-12-31">
                                    <input type="submit" value="Guardar">
                                </form>
                                <script>
                                    function showFormBirth() {
                                        var form = document.getElementById("edit-birth");
                                        form.style.display = "block";
                                    }
                                </script>
                            {{/canEdit}}

                    </p>
                    <p>• Ubicación: {{Ciudad}}, {{Pais}} <img src="public/imagenes/pais.png" width="30px">
                        {{#canEdit}}
                            <a href="user&name={{Nombre_usuario}}/edit=ubi">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                </svg>
                            </a>
                        {{/canEdit}}
                    </p>
                    <p>• Correo: {{Mail}}
                        {{#canEdit}}
                            <a href="user&name={{Nombre_usuario}}/edit=mail">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                    <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                    <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                                </svg>
                            </a>
                        {{/canEdit}}
                    </p>
                </div>
            {{/user}}
        </div>
        <div class="mx-auto">
            <br>
            <h3>Partidas jugadas</h3>
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Id Partida:</th>
                    <th>Puntaje obtenido:</th>
                </tr>
                </thead>
                <tbody>
                {{#games}}
                    <tr>
                        <td># {{id}}</td>
                        <td>{{puntaje}} puntos</td>
                    </tr>
                {{/games}}
                </tbody>
            </table>
        </div>
    </div>
</main>
